<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="styleButtonOne" type="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorButtonOne</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>
    <style name="styleButtonTwo" type="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorButtonOne</item>
        <item name="backgroundTint">@color/colorButtonTwo</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>
    <style name="styleSpinner" type="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
    </style>
    <style name="editTextNumber" type="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorTextView</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:paddingLeft">15sp</item>
    </style>
    <style name="textViewItem" type="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorTextView</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/text_view_bg</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>